---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "About Me";

const identity = {
    firstName: "Taeju",
    lastName: "Ahn",
    country: "Korea",
    hobbies: ["Coding", "Reading the books", "Writing the articles"]
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro"];
const skillColor = "crimson";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
        <style>

        </style>
	</head>
	<body>
        <Header />


		<h1 class="text-purple-400 font-medium">{pageTitle}</h1>
        <ul>
            <li>My name is {identity.firstName + identity.lastName}</li>
            <li>I live in {identity.country} and I'm thinking about what is a good life?</li>
            <br>
            {identity.hobbies.length >= 2 && <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li> }
        </ul>
        <br>
        <p>My skills are : </p>
        <ul>
            {skills.map(skill => <li class={skillColor}>{skill}</li>)}
        </ul>
        <Footer />
        <script>
            import "../scripts/menu.js";
        </script>
	</body>
</html>
