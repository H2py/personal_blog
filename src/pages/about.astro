---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "About Me";

const identity = {
  firstName: "Taeju",
  lastName: "Ahn",
  country: "Korea",
  hobbies: ["Coding", "Reading the books", "Writing the articles"]
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro"];

const fullName = `${identity.firstName} ${identity.lastName}`;
const primaryHobbies = identity.hobbies.slice(0, 2);
---
<BaseLayout pageTitle={pageTitle}>
  <section class="about-section">
    <div>
      <p class="lead-text">
        {fullName} is exploring thoughtful interfaces and deliberate writing from {identity.country}.
      </p>
      <ul class="identity-list">
        <li>Constantly asking “what is a good life?”</li>
        <li>Current obsessions: {primaryHobbies.join(" and ")}.</li>
        <li>Documenting experiments in Astro, storytelling, and personal knowledge tools.</li>
      </ul>
    </div>

    <div>
      <h2 class="section-heading">Core Skills</h2>
      <ul class="skills-list">
        {skills.map((skill) => <li>{skill}</li>)}
      </ul>
    </div>
  </section>
</BaseLayout>
