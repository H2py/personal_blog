---
import BaseLayout from "../layouts/BaseLayout.astro";
import GreetingIsland from '../components/GreetingIsland.astro';

const pageTitle = "Personal Blog";
const greetingMessages = ["Hej", "Hallo", "Hola", "Habari"];
---
<!-- cspell:ignore Habari -->
<BaseLayout pageTitle={pageTitle}>
  <p class="lead-text">
    A living notebook for experiments in Astro, thoughtful UI, and the craft of writing on the web.
  </p>
  <GreetingIsland messages={greetingMessages} />
</BaseLayout>
